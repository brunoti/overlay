{
  "name": "overlay.js",
  "version": "0.0.0",
  "description": "An simple and lightwheigt overlay plugin for loadings and refreshs made with ajax.",
  "main": "overlay.js",
  "scripts": {
    "build": "npm run build-debug && npm run build-min",
    "build-debug": "browserify src/overlay.js -s Overlay -t [ babelify --es2015 ] -o ./overlay.js",
    "build-min": "uglifyjs ./overlay.js --comments '/!/' -m screw_ie8=true -c screw_ie8=true,unused=false -o ./overlay.min.js",
    "build-watch": "watchify src/overlay.js -s Overlay -t [ babelify --es2015 ] -o ./overlay.js -v"
  },
  "keywords": [
    "overlay",
    "no-jquery",
    "vanillajs",
    "es6",
    "es2015",
    "browserify",
    "class",
    "simple"
  ],
  "author": "Bruno Oliveira <bruno.oliveirati1@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  }
}
